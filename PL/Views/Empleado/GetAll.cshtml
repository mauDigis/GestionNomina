@model ML.Empleado
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row m-3">
        <a href="@Url.Action("Form", "Empleado", new {IdEmpleado = 0})" class="btn btn-outline-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
            </svg>
            Agregar Empleado
        </a>
    </div>
    <div class="row">
        <div class="col-sm-12">
            @if (Model.Empleados != null)
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
                    <div>
                        Se obtuvieron los siguientes registros:
                    </div>
                </div>

                <div class="table table-responsive">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Editar</th>
                                <th>Eliminar</th>
                                <th>IdEmpleado</th>
                                <th>Nombre Completo</th>
                                <th>FechaNacimiento</th>
                                <th>RFC</th>
                                <th>NSS</th>
                                <th>CURP</th>
                                <th>Fecha de Ingreso</th>
                                <th>Departamento</th>
                                <th>SalarioBase</th>
                                <th>No. Faltas</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ML.Empleado empleado in Model.Empleados)
                            {
                                <tr>
                                    <td>
                                        <div class="row">
                                            <div class="col-md-auto">
                                                <a class="btn btn-outline-warning d-flex align-items-center p-2" href="@Url.Action("Form","Empleado", new {IdEmpleado = empleado.IdEmpleado})">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                                    </svg>
                                                    Editar
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="row">
                                            <div class="col-md-auto">
                                                <button type="button" class="btn btn-outline-danger d-flex align-items-center p-2" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="EmpleadoDelete(@empleado.IdEmpleado, '@empleado.Nombre')">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash me-2" viewBox="0 0 16 16">
                                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                                    </svg>
                                                    Eliminar
                                                </button>
                                            </div>
                                        </div>
                                        @*<a href="@Url.Action("Delete","Usuario", new {IdUsuario = usuario.IdUsuario})" class="btn btn-danger" onclick="return confirm('¿Estás seguro de eliminar el usuario: '+ '@usuario.Nombre')">
                                Eliminar
                                </a>*@
                                    </td>
                                    <td>@empleado.IdEmpleado</td>
                                    <td>@empleado.Nombre @empleado.ApellidoPaterno @empleado.ApellidoMaterno</td>
                                    <td>@empleado.FechaNacimiento</td>
                                    <td>@empleado.RFC</td>
                                    <td>@empleado.NSS</td>
                                    <td>@empleado.CURP</td>
                                    <td>@empleado.FechaIngreso</td>
                                    <td>@empleado.Departamento.Descripcion</td>
                                    <td>@empleado.SalarioBase</td>
                                    <td>@empleado.NoFaltas</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    No existen registros para la tabla Usuario. Error: @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>
